{
  "pluginAlias": "EufySecurityHomebridgePlugin",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Name",
        "type": "string",
        "required": true
      },
      "password": {
          "title": "Password",
          "type": "string",
          "required": true
      },
      "enablePush": {
        "title":"Push Client",
        "type": "boolean",
        "default": true,
        "required": true
      },
      "ignoreHubSns": {
        "title":"Ignore Hubs",
        "type": "array",
        "items": {
          "title": "Hub serial number",
          "type": "string"
        }
      },
      "ignoreDeviceSns": {
        "title":"Ignore Devices",
        "type": "array",
        "items": {
          "title": "Device serial number",
          "type": "string"
        }
      }
    }
  }
}